<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_thumbnail_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:maxHeight="@dimen/thumbnail_height"
            android:scaleType="centerCrop"
            tools:src="@drawable/placeholder_character" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/margin_small">

            <TextView
                android:id="@+id/txt_character_name"
                style="@style/TitleBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                tools:text="Name" />
            <!--
                android:layout_weight="1"
            -->

            <!--
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/img_favorite"
                android:layout_width="@dimen/card_view_icon_size"
                android:layout_height="@dimen/card_view_icon_size"
                android:layout_weight="0"
                android:visibility="gone"
                app:lottie_fileName="" />
            -->

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>