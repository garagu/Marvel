<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Splash" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Card" parent="CardView.Light">
        <item name="cardCornerRadius">4dp</item>
        <item name="contentPadding">@dimen/margin</item>
    </style>

    <style name="TitleExtraBig" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleBig" parent="@style/TextAppearance.AppCompat.Title" />

    <style name="TitleSmall" parent="@style/TextAppearance.AppCompat.Body2" />

    <style name="TitleBig.Colored">
        <item name="android:textColor">@color/colorBackgroundDark</item>
    </style>

    <style name="FieldEmpty">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar">
        <item name="android:stepSize">1</item>
        <item name="android:progressTint">@color/colorRating</item>
        <item name="android:secondaryProgressTint">@color/colorRating</item>
    </style>

    <style name="RatingBarSmall" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:isIndicator">true</item>
        <item name="android:progressTint">@color/colorRating</item>
        <item name="android:secondaryProgressTint">@color/colorRating</item>
    </style>

</resources>